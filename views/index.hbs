<h1>Home Feed</h1> 

<div class="nav-bar">
  <form action="/search">
    <input type="text">
    <button type="submit">Search</button>
  </form>
  {{#if user}}
  <h2> Welcome {{user.username}}</h2>
      <form action="/add-recipe" method="GET">
        <button>Add Recipe</button>  
      </form>
      <form action="/logout" method="POST">
        <button type="submit">
          Logout
        </button>
      </form>
 
</div>
{{else}}

<a href="/login">Login</a> | <a href="/signup">Register</a>

{{/if}}
  <hr>

<div></div>
  {{#each recipesFromDB}}
<div class="recipe-post">

  <h2> <a href="/profile/{{user.id}}">{{user.username}}</a> </h2>

    <h3>
      {{title}}
    </h3>

        <img src="{{imageUrl}}" alt="" style="height: 200px; width: 200px;">
        <p>{{description}}</p>
        
      <form action="/recipe-details/{{id}}" method="GET">
      <button type="submit">
        Recipe Details
        </button>
      </form>

      <form action="/{{id}}" method="POST">
        <button class="like-button" type="submit">LIKE
        </button>
      </form>
      <p>{{likes}}</p>
</div>
  {{/each}}
<br>
<hr>
<a href="/about">About</a>