<h1>Edit {{recipe.title}}</h1>

<form action="/edit-recipe/{{recipe.id}}" method="POST" enctype="multipart/form-data">

  <label for="">Title</label>
  <input type="text" name="title" value="{{recipe.title}}">

  <label for="">Ingredients</label>
  <textarea name="ingredients" cols="30" rows="5"> {{recipe.ingredients}} </textarea>

  <label for=""> Description </label>
  <textarea name="description" cols="30" rows="5"> {{recipe.description}} </textarea>

  <label for="">Difficulty (between 1 and 5) </label>
  <input type="number" name="difficulty" min="1" max="5" value="{{recipe.difficulty}}">

  <label for=""> Time </label>
  <input type="time" name="time" min="1" max="5" value="{{recipe.time}}">

  <label for=""> Image </label>
  <input type="file" name="image">

  <button type="submit"> Update </button>

</form>

