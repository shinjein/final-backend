<div class="container">
  <div class="row">
      <div class="col"> </div>
      <div class="col-6" id="recipe-details-main">
        <section class="card-template">
          <section class="user-profile-info">
            <img src="{{user.imageUrl}}" class="user-profile-img">
            <h3>{{user.username}}</h3>
          </section>
          <p class="user-bio-text"> {{user.bio}} </p>
          <hr>

          <h3 class="user-profile-posts-heading" > posts </h3>
          
          <br>
            {{#each recipes}}
            <h5 class="user-profile-heading"> {{title}} </h5>
            <section class="user-profile-recipe">
              <article class="user-profile-text">
              <p>description: {{description}}</p>
              <p>ingredients: {{ingredients}}</p>
              </article>
                <img src="{{imageUrl}}" class="user-profile-post-img">
            </section>
                <br>
            {{/each}}

          {{#eq user.username currentUser.username}}
          <a href="/profile/edit/{{user.id}}"> Edit your profile </a>
          {{else}}
          {{/eq}}
        </section>
      </div>
    <div class="col"></div>
  </div>
</div>


